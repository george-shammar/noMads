<div class = "horizontal ps-5">
    <%= link_to 'Opinions', root_path, class: "text-decoration-none" %>


        <div>
            <div class = "container">
            <div class = "row">
              <div class ="col-8">
                <%= render 'form', opinion: @opinion %>
                    <div>
                        <h4 class = "py-4">Recent Opinions</h4>
                        <div>
                        <% @opinions.each do | opinion | %>
                            <div class="g-light border px-2 py-2 my-1">
                            <%= opinion.author.fullname%>
                            <%= opinion.author.username%>
                            <p><%= opinion.text %></p>
                                <div>
                                    <%= link_to opinion do %>
                                        <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
                                    <% end %>
                                    <%= link_to edit_opinion_path(opinion) do %>
                                        <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
                                    <% end %>
                                    <%= link_to opinion, method: :delete, data: { confirm: "Are you sure you want to delete this tweet?"} do %>
                                        <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                                    <% end %>
                                </div>
                                </div>
                        <% end %>
                        </div>
                    </div>
              </div>


                    <div class = "col">
                        <h4>Who to follow</h4>
                        <%= User.find(current_user.id).fullname %>
                        
                    
                </div>
            </div>    </div>
        </div>
</div>










